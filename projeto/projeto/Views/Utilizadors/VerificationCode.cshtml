@model VerificationCodeModel

@{
    ViewData["Title"] = "Verification Code";
}

<div class="container login-page">
    <div class="login-container">
        <h2>Verification Code</h2>

        <form asp-action="VerifyCode" method="post">
            <div class="form-group">
                <input asp-for="Code" class="form-control form-control-lg" placeholder="Enter the verification code" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <button type="submit" class="btn login-btn btn-block">Verify</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage))
        {
            <div class="alert alert-danger mt-3">
                @ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage
            </div>
        }

        <div class="mt-3">
            <a href="@Url.Action("ForgotPassword", "Home")" class="forgot-password-link">Resend Code ></a>
        </div>
    </div>
</div>